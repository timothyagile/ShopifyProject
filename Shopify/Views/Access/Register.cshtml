@model Shopify.Models.TUser
@{
    ViewData["Title"] = "Register";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Đăng ký</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="../../LayoutAdmin/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="../../LayoutAdmin/assets/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Layout styles -->
    <link rel="stylesheet" href="../../LayoutAdmin/assets/css/style.css">
    <!-- End layout styles -->
    <link rel="shortcut icon" href="../../LayoutAdmin/assets/images/favicon.ico" />
</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth">
                <div class="row flex-grow">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left p-5">
                            <div class="brand-logo">
                                <img src="../../LayoutAdmin/assets/images/logo.svg">
                            </div>
                            <h4>Chào mừng! Hãy tạo tài khoản mới</h4>
                            <h6 class="font-weight-light">Điền thông tin để đăng ký.</h6>
                            @using (Html.BeginForm("Register", "Access", FormMethod.Post))
                            {
                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.Username, new { @class = "form-control form-control-lg", placeholder = "Tên người dùng", required = "required", autofocus = "autofocus" })
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.Password, new { @class = "form-control form-control-lg", type = "password", placeholder = "Mật khẩu", required = "required" })
                                </div>
                                <div class="mt-3">
                                    <button class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn" type="submit">Đăng ký</button>
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    Đã có tài khoản? <a asp-action="Login" asp-controller="Access" class="text-primary">Đăng nhập</a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- plugins:js -->
    <script src="../../LayoutAdmin/assets/vendors/js/vendor.bundle.base.js"></script>
    <script src="../../LayoutAdmin/assets/js/off-canvas.js"></script>
    <script src="../../LayoutAdmin/assets/js/hoverable-collapse.js"></script>
    <script src="../../LayoutAdmin/assets/js/misc.js"></script>
    <!-- endinject -->
    <!-- JavaScript để hiển thị alert nếu có lỗi "Username" -->
    @if (ViewData.ModelState.ContainsKey("Username") && ViewData.ModelState["Username"].Errors.Count > 0)
    {
        <script>
            alert("Tên người dùng đã tồn tại. Vui lòng chọn tên khác.");
        </script>   
    }
</body>
</html>


