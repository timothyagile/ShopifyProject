@{
    ViewData["Title"] = "Home Page";
    Layout ="~/Views/Shared/_LayoutOgani.cshtml";
}
@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<TDanhMucSp>

@foreach (var product in Model)
{
    <div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">
        <div class="featured__item">
            <div class="featured__item__pic set-bg" data-setbg=@Url.Content("../Images/ProductImages/" + product.AnhDaiDien) style="background-image: url(&quot;img/featured/feature-1.jpg&quot;);">
                <ul class="featured__item__pic__hover">
                    <li><a href="#"><i class="fa fa-heart"></i></a></li>
                    <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                    <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
                </ul>
            </div>
            <div class="featured__item__text">
                <h6><a href="#">@product.TenSp</a></h6>
                <h5>@product.GiaLonNhat</h5>
            </div>
        </div>
    </div>
}

<div class="product__pagination">
    @Html.PagedListPager(Model, page=>Url.Action("Index", new{page=page}))
</div>